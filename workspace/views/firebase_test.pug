doctype html
html(lang='en')
    head
        title= "CodeRoom TESTING"
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(src="https://www.gstatic.com/firebasejs/5.5.2/firebase.js")
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        link(rel='stylesheet', href='/javascripts/codemirror/lib/codemirror.css')
        script(src="/javascripts/codemirror/lib/codemirror.js")
        script(src="/javascripts/codemirror/mode/python/python.js")
        link(rel='stylesheet' href="/javascripts/codemirror/theme/darcula.css")
        link(rel='stylesheet' href="/javascripts/codemirror/theme/lucario.css")
        script(src="/javascripts/codemirror/addon/scroll/annotatescrollbar.js")
        script(src="/javascripts/codemirror/addon/search/matchesonscrollbar.js")
        script(src="/javascripts/codemirror/addon/search/searchcursor.js")
        script(src="/javascripts/codemirror/addon/search/match-highlighter.js")
    style.
        .test {
            background-color: #ff7;
        }

        /*.CodeMirror-selection-highlight-scrollbar {*/
            /*background-color: yellow;*/
        /*}*/
    body
        h3="Room ID: " + roomId
        h3="User ID: " + userId

    button.btn.btn-primary(type='submit', id = "btna", onclick='resetPermission()') Reset Permission(for testing):

    button.btn.btn-primary(type='submit', id = "btn0", onclick='requirePermission()') Require Permission:
    div.form-group
        label(for='code_input') Code Input:
        button.btn.btn-primary(type='submit', id = "btn", onclick='passPermission()') Change Permission:
        textarea#code_input.form-control(name='code_input')
    div.form-group
        label(for='code') Code:
        pre(id="code")

    div.form-group
        label(for='result') Result:
        pre(id='result')
        button.btn.btn-primary(type='submit', id = "btn5", onclick="run()") Run

    div.form-group
        label(for='comment_input') Comment Input:
        input#comment_input.form-control(type='text', name='comment_input')
        button.btn.btn-primary(type='submit', id = "btn2", onclick="postComment()") Comment Submit:

    div.form-group
        label(for='comment_list') Comment List:
        ul(id='comment_list')

    div.form-group
            label(for='user_list') User List:
            ul(id='user_list', style="list-style: none;")
    script(src="/javascripts/myJS.js")
<div class="block-5">
    <!--username/password/email/mobile/birthday/city/country/coderooms/follower/following-->
    <br>
    <br>
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-10">
                <h1>Setting</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"><!--left col-->


                <div class="text-center">
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png"
                         class="avatar img-circle b5-avatar" alt="avatar">

                    <input type="file" class="text-center center-block file-upload">
                </div>
                <br>

                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Coderooms</strong></span> 3
                    </li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 14</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Following</strong></span> 37
                    </li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78
                    </li>
                </ul>

                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    <div class="panel-body">
                        <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i
                            class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i
                            class="fa fa-google-plus fa-2x"></i>
                    </div>
                </div>

            </div><!--/col-3-->
            <div class="col-sm-9">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#profile" class="b5-a">User Proile</a></li>
                    <li><a data-toggle="tab" href="#coderooms" class="b5-a">Coderoomes</a></li>
                    <li><a data-toggle="tab" href="#followers" class="b5-a">Followers</a></li>
                    <li><a data-toggle="tab" href="#following" class="b5-a">Following</a></li>
                </ul>

                <div class="tab-content">

                    <div class="tab-pane active" id="profile">
                        <hr>
                        <form class="form" action="/profile/<%=user.id%>?_method=PUT" method="POST" id="profileform">
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="first_name"><h4>First name</h4></label>
                                    <input type="text" class="form-control" name="firstName" id="first_name"
                                           placeholder="first name" value ="<%=user.firstName%>"title="enter your first name if any.">

                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="last_name"><h4>Last name</h4></label>
                                    <input type="text" class="form-control" name="lastName" id="last_name"
                                           placeholder="last name" value="<%=user.lastName%>"title="enter your last name if any.">

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="last_name"><h4>Username</h4></label>
                                    <input type="text" class="form-control" name="username" id="username"
                                           placeholder="username" value="<%=user.username%>"title="enter your username if any.">

                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="email"><h4>Email</h4></label>
                                    <input type="email" class="form-control" name="email" id="email"
                                           placeholder="you@email.com" value = "<%=user.email%>"title="enter your email.">

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="password"><h4>Password</h4></label>
                                    <input type="password" class="form-control" name="password" id="password"
                                           placeholder="password" title="enter your password.">

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="confirmpwd"><h4>Confirm Password</h4></label>
                                    <input type="password" class="form-control" name="confirmpwd" id="confirmpwd"
                                           placeholder="confirm password" title="enter your password again.">

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="mobile"><h4>Mobile</h4></label>
                                    <input type="text" class="form-control" name="mobile" id="mobile"
                                           placeholder="enter mobile number" value="<%=user.mobile%>"title="enter your mobile number if any.">

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="postcode"><h4>Postcode</h4></label>
                                    <input type="text" class="form-control" name="postCode" id="postcode"
                                           placeholder="enter postcode" value="<%=user.postCode%>"title="enter your postcode if any.">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="city"><h4>City</h4></label>
                                    <input type="text" class="form-control" value="<%=user.city%>" id="city" name="city" placeholder="somewhere"
                                           title="enter a city">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label for="country"><h4>Country</h4></label>
                                    <input type="text" class="form-control" id="country" placeholder="somewhere"
                                           title="enter a city">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="my-button b5-button" type="submit">
                                        <i class="glyphicon glyphicon-ok-sign"></i>
                                        Save
                                    </button>
                                    <button class="my-button b5-button" type="reset">
                                        <i class="glyphicon glyphicon-repeat"></i>
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </form>
                        <hr>
                    </div><!--/tab-pane-->


                    <div class="tab-pane table-responsive" id="coderooms">
                        <h2></h2>
                        <hr>
                        <form class="form" action="##" method="post" id="coderoomtable">
                            <table class="table table-hover table-striped">
                                <caption>My Coderooms</caption>
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>#Participants</th>
                                    <th>Short Description</th>
                                    <th>Manage</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>Code1</td>
                                    <td>20</td>
                                    <td>asdfasdfasdf</td>
                                    <td>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">View</button>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Code2</td>
                                    <td>14</td>
                                    <td>asdfasdfasdf</td>
                                    <td>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">View</button>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Code3</td>
                                    <td>27</td>
                                    <td>asdfasdfasdf</td>
                                    <td>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">View</button>
                                        <button class="my-button" style="height: 3rem;width: 6rem;">Delete</button>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </form>

                    </div><!--/tab-pane-->

                    <div class="tab-pane" id="followers">
                        <hr>
                        <div class="media user-follower">
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="User Avatar">
                            <div class="media-body">
                                <a href="#">Antonius<br><span class="text-muted username">@mrantonius</span></a>
                                <button type="button" class="btn btn-sm btn-toggle-following pull-right">
                                    <i class="fa fa-checkmark-round"></i>
                                    <span>Following</span>
                                </button>
                                <button type="button" class="btn btn-sm btn-warning pull-right">View</button>
                            </div>
                        </div>
                        <div class="media user-follower">
                            <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="User Avatar">
                            <div class="media-body">
                                <a href="#">Michael<br><span class="text-muted username">@iamichael</span></a>
                                <button type="button" class="btn btn-sm btn-default pull-right">
                                    <i class="fa fa-plus"></i> Follow
                                </button>
                                <button type="button" class="btn btn-sm btn-warning pull-right">View</button>
                            </div>
                        </div>
                    </div><!--/tab-pane-->

                    <div class="tab-pane" id="following">
                        <hr>
                        <div class="media user-following">
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="User Avatar">
                            <div class="media-body">
                                <a href="#">Stella<br><span class="text-muted username">@stella</span></a>
                                <button type="button" class="btn btn-sm btn-danger pull-right">
                                    <i class="fa fa-close-round"></i> Unfollow
                                </button>
                                <button type="button" class="btn btn-sm btn-warning pull-right">View</button>
                            </div>
                        </div>
                    </div><!--/tab-pane-->
                </div><!--/tab-content-->
            </div><!--/col-9-->
        </div><!--/row-->
    </div>
</body>

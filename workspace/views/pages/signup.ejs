<!DOCTYPE html>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<html>
<head>
	<title>Sign up</title>
	<link rel="icon" href="icon/website.png" type="image/x-icon">
	<link rel="stylesheet" href="stylesheets/style.css">
	<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>

</head>
<script type="text/javascript">
    $(document).ready(function() {
        var sideMenu = true;
        $(".b3-moveclick").click(function() {
            if (!sideMenu) {
                sideMenu = true;
                console.log("not sidemenu");
                $(".b3-moveclick").animate({left: "0px"});
                $(".b3-hold-right").css('display','inline-block');
                $(".b3-hold-left").css('display','none');
                $(".b3-moveclick-left").css('display','inline-block');
                $(".b3-moveclick-right").css('display','none');
                $(".b3-form-in").css('display','none');
                $(".b3-form-up").css('display','inline-block');
            }
            else {
                console.log("side menu");
                sideMenu = false;
                $(".b3-moveclick").animate({left: "70px"});
                $(".b3-hold-right").css('display','none');
                $(".b3-hold-left").css('display','inline-block');
                $(".b3-moveclick-left").css('display','none');
                $(".b3-moveclick-right").css('display','inline-block');
                $(".b3-form-in").css('display','inline-block');
                $(".b3-form-up").css('display','none');
            }
        });
    });
</script>
<body>
<div class="block-3">
	<div class="b3-disk">
		<div class="b3-cover"></div>
		<div class="b3_triangle1"></div>
		<div class="b3_triangle2"></div>
		<div class="b3-hold">
			<div class="b3-hold-right" style="display: none;float: right">
			</div>
			<div class="b3-hold-left" style="float: left">
			</div>

		</div>
		<div class="b3-moveclick" style="left: 0px">
			<div class="b3-moveclick-left" style="display: inline-block;">
				<h2>Sign up</h2>
			</div>
			<div class="b3-moveclick-right" style="display: none;">
				<h2>Sign in</h2>
			</div>
		</div>
		<div class="b3-label">
			<div class="b3-name"><a href="homepage.ejs">OurCodes</a></div>

			<div class="b3-hidden">
				<div class="b3-form-in" style="display:none;">
					<form action="/login" method="post" >
						<div class="b3-username">
							<input type="text" name="username" class="b3-input" placeholder="Username">
						</div>
						<div class="b3-password">
							<input type="password" name="password" class="b3-input" placeholder="Password">
						</div>
						<div class="">
							<button class="btn b3-button">Sign in</button>
						</div>
					</form>
				</div>

				<div class="b3-form-up">
					<form method="post" action="/register">
						<div class="b3-username">
							<input type="text" name="username" class="b3-input" placeholder="Username">
						</div>
						<div class="b3-email">
							<input type="text" name="email" class="b3-input" placeholder="Email">
						</div>
						<div class="b3-password">
							<input type="password" name="password" class="b3-input" placeholder="Password">
						</div>
						<div class="">
							<button class="btn b3-button">Sign up</button>
						</div>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>
</body>
</html>